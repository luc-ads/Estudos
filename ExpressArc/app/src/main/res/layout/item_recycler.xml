<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_gray"
    android:layout_margin="2dp"
    android:padding="2dp">

    <Button
        android:id="@+id/btn_clique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLIQUE"
        android:backgroundTint="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Minha casa minha vida"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/btn_clique"
        app:layout_constraintTop_toBottomOf="@id/btn_clique"
        app:layout_constraintEnd_toEndOf="@id/btn_clique"
        />

</androidx.constraintlayout.widget.ConstraintLayout>